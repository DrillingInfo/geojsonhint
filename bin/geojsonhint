#!/usr/bin/env node

var fs = require('fs'),
    path = require('path'),
    geojsonhint = require('../'),
    colors = require('colors'),
    argv = require('optimist')
        .usage('Usage: $0 FILE.geojson')
        .alias('j', 'json')
        .describe('json', 'output json-formatted data for hints')
        .boolean('json')
        .alias('c', 'context')
        .default('context', 0)
        .demand(1)
        .argv;

var str = fs.readFileSync(argv._[0], 'utf8');
var errors = geojsonhint.hint(str);

if (errors) {
    if (errors instanceof Error) {
        console.log('invalid JSON');
        throw errors;
    }
    if (argv.context) {
        errors = geojsonhint.context(str);
    }
    if (argv.json) {
        console.log(JSON.stringify(errors, null, 2));
    } else {
        errors.forEach(function(e) {
            console.log('line %s, %s', ('' + e.line), e.message.red);
        });
    }
}
